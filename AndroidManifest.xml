<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.sheltoidusa.universaldominationtheboardgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:screenOrientation="portrait"
            android:name="com.sheltoidusa.universaldominationtheboardgame.UDMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.sheltoidusa.universaldominationtheboardgame.MainMenu"
            android:label="Main Menu" />

            <activity
                android:screenOrientation="portrait"
                android:name="com.sheltoidusa.universaldominationtheboardgame.SinglePlayerMenu"
                android:label="Single Player Menu" />

                <activity
                    android:screenOrientation="portrait"
                    android:name="com.sheltoidusa.universaldominationtheboardgame.CampaignMenu"
                    android:label="Campaign Menu" />

                <activity
                    android:screenOrientation="portrait"
                    android:name="com.sheltoidusa.universaldominationtheboardgame.TestArenaMenu"
                    android:label="Test Arena Menu" />

            <activity
                android:screenOrientation="portrait"
                android:name="com.sheltoidusa.universaldominationtheboardgame.MultiplayerMenu"
                android:label="Multiplayer Menu" />

                <activity
                    android:screenOrientation="portrait"
                    android:name="com.sheltoidusa.universaldominationtheboardgame.CoopertiveMenu"
                    android:label="Coopertive Menu" />

                <activity
                    android:screenOrientation="portrait"
                    android:name="com.sheltoidusa.universaldominationtheboardgame.SkirmishSelectionMenu"
                    android:label="Skirmish Selection Menu" />

            <activity
                android:screenOrientation="portrait"
                android:name="com.sheltoidusa.universaldominationtheboardgame.RuleBook"
                android:label="Rule Book" />

            <activity
                android:screenOrientation="portrait"
                android:name="com.sheltoidusa.universaldominationtheboardgame.OptionsMenu"
                android:label="Options Menu" />

            <activity
                android:screenOrientation="portrait"
                android:name="com.sheltoidusa.universaldominationtheboardgame.Credits"
                android:label="Credits List" />

        <activity
            android:screenOrientation="landscape"
            android:name="com.sheltoidusa.universaldominationtheboardgame.GameBoardBattlefield"
            android:label="Game Board Battlefield" />

    </application>

</manifest>