<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/singlePlayerMenuLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/space_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/singlePlayerMenuTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_dark_gradient"
            android:gravity="center"
            android:text="@string/single_player_menu_title"
            android:textColor="@android:color/black"
            android:textSize="100sp" />

        <Button
            android:id="@+id/campaignButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:background="@drawable/button_light_gradient"
            android:onClick="openCampaignMenu"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/campaign_button"
            android:textSize="60sp" />

        <Button
            android:id="@+id/testArenaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/button_light_gradient"
            android:onClick="openTestArenaMenu"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/test_arena_button"
            android:textSize="60sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>