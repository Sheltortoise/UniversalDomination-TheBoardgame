<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainMenuLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/space_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mainMenuTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_dark_gradient"
            android:gravity="center"
            android:text="@string/main_menu_title"
            android:textColor="@android:color/black"
            android:textSize="110sp" />

        <Button
            android:id="@+id/singlePlayerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_light_gradient"
            android:onClick="openSinglePlayerMenu"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/single_player_button"
            android:textAllCaps="false"
            android:textSize="60sp" />

        <Button
            android:id="@+id/multiplayerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_light_gradient"
            android:onClick="openMultiplayerMenu"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/multiplayer_button"
            android:textAllCaps="false"
            android:textSize="60sp" />

        <Button
            android:id="@+id/ruleBookButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_light_gradient"
            android:onClick="openRuleBook"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/rule_book_button"
            android:textAllCaps="false"
            android:textSize="60sp" />

        <Button
            android:id="@+id/optionsMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_light_gradient"
            android:onClick="openOptionsMenu"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/options_menu_button"
            android:textAllCaps="false"
            android:textSize="60sp" />

        <Button
            android:id="@+id/creditsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_light_gradient"
            android:onClick="openCredits"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/credits_button"
            android:textAllCaps="false"
            android:textSize="60sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>