<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/universalDominationLayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_screen_image"
    tools:context="com.sheltoidusa.UDMain">

    <TextView
        android:id="@+id/menuOpener"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:onClick="openMainMenu"
        android:text="@string/menu_opener_dialogue"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</android.support.constraint.ConstraintLayout>