<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/multiplayerMenuLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/space_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/multiplayerMenuTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_dark_gradient"
            android:gravity="center"
            android:text="@string/multiplayer_menu_title"
            android:textColor="@android:color/black"
            android:textSize="110sp" />

        <Button
            android:id="@+id/coopertiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:background="@drawable/button_light_gradient"
            android:onClick="openCoopertiveMenu"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/coopertive_button"
            android:textSize="60sp" />

        <Button
            android:id="@+id/skirmishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/button_light_gradient"
            android:onClick="openSkirmishSelectionMenu"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/skirmish_button"
            android:textSize="60sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>