<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/optionsMenuLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/space_background"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="247dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/optionsMenuTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_dark_gradient"
            android:text="@string/options_menu_title"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="100sp" />

        <LinearLayout
            android:id="@+id/soundEffectsLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/soundEffectsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_light_gradient_small"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/sound_effects_slider"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <SeekBar
                android:id="@+id/soundEffectsSlider"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_light_gradient_small"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:thumb="@drawable/slider_thumb" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/gameMusicLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gameMusicTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_light_gradient_small"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/game_music_slider"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <SeekBar
                android:id="@+id/gameMusicSlider"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_light_gradient_small"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:thumb="@drawable/slider_thumb" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/difficultyLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/difficultyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_light_gradient_small"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/difficulty_slider"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <SeekBar
                android:id="@+id/difficultySlider"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="72dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_light_gradient_small"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:thumb="@drawable/slider_thumb" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>